@model RecipeBook.Models.RecipeIngredient

@{
    ViewData["Title"] = "Adicionar ingrediente na receita";
}

<h1>@ViewData["Title"]</h1>

<h4>RecipeIngredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Ingredient" class="control-label"></label>
                <select asp-for="Ingredient" 
                        asp-items="@(new SelectList(Model.Ingredient.RecipeIngredients, "Id", "Name"))"
                        class="form-control"></select>
                <span asp-validation-for="Ingredient" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-dark">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
